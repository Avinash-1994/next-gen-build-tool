{
  "name": "urja",
  "version": "0.1.3",
  "description": "âš¡ Urja - Energy-powered build tool with AI optimization, Rust native workers, and parallel execution",
  "type": "module",
  "main": "./dist/main.js",
  "bin": {
    "urja": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:native && tsc -p tsconfig.build.json && cp nextgen_native.node dist/ && cp src/plugins/*.mjs dist/plugins/ 2>/dev/null || true && mkdir -p dist/runtime && cp src/runtime/*.js dist/runtime/",
    "build:native": "cd src/native && napi build --platform --release --dts index.d.ts && cp *.node ../../nextgen_native.node 2>/dev/null || true",
    "dev": "node ./dist/cli.js dev",
    "start": "node ./dist/cli.js dev",
    "prepack": "npm run build && node ./scripts/pack.js",
    "test:repro": "node ./scripts/repro_test.mjs",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "build-tool",
    "bundler",
    "vite",
    "webpack",
    "esbuild",
    "rust",
    "performance",
    "hmr",
    "hot-reload",
    "react",
    "vue",
    "svelte",
    "typescript",
    "dev-server",
    "ai-powered",
    "parallel",
    "native",
    "fast"
  ],
